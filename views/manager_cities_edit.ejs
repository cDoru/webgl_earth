    <div class="container">  
      <form class="form-horizontal">
        <fieldset>
          <!-- Form Name -->
          <legend>Edit City</legend>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">City code</label>
            <div class="controls">
              <input id="code" name="code" type="text" value="<%= city.code %>" placeholder="3 letter code" class="input-xlarge" required="">              
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">City name RU</label>
            <div class="controls">
              <input id="city_name_ru" name="city_name_ru" value="<%= city.city_name.ru %>" type="text" placeholder="Русское имя" class="input-xlarge">              
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">City name EN</label>
            <div class="controls">
              <input id="city_name_en" name="city_name_en" value="<%= city.city_name.en %>"  type="text" placeholder="English name" class="input-xlarge">              
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">Country code</label>
            <div class="controls">
              <input id="country_code" name="country_code" value="<%= city.country_code %>" type="text" placeholder="2 letter IATA code" class="input-xlarge" required="">
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">Flickr place ID</label>
            <div class="controls">
              <input id="flickr_place_id" name="flickr_place_id" value="<%= city.flickr.place_id %>" type="text" placeholder="Flick uniq place code" class="input-xlarge">
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">Wikipedia ID</label>
            <div class="controls">
              <input id="wikipedia_id" name="wikipedia_id" value="<%= city.wikipedia_array.id %>" type="text" placeholder="code to query wikipedia for info" class="input-xlarge">
            </div>
          </div>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label">Coordinates</label>
            <div class="controls">
              <input id="coordinates" name="coordinates" value="<%= city.coordinates %>" type="text" placeholder="latitude, lontitude" class="input-xlarge">
            </div>
          </div>
          <!-- Button (Double) -->
          <div class="control-group">
            <label class="control-label"></label>
            <div class="controls">
              <button id="button1id" name="button1id" class="btn btn-success">Submit</button>
              <button id="button2id" name="button2id" class="btn btn-danger">Cancel</button>
            </div>
          </div>
        </fieldset>
      </form>
   
