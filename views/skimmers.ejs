<!DOCTYPE html>
<html lang="en" ng-app>
  
  <head>
    <meta charset="utf-8">
    <title>
      Swarm model
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <style>
      body { padding-top: 60px; /* 60px to make the container go all the way
      to the bottom of the topbar */ }
      #parameters{
        width: 300px;
        margin: 0 auto;
      }

      #parameters .btn{
        float: right;
        margin-right: 80px;
      }
      .step_2{
        display: none;
      }
      #myCanvas, #paperCanvas{
        padding-top: 10px;
      }
    </style>
    <link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">
    
    <link href="/stylesheets/dashboard.css" rel="stylesheet">   


    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js">
      </script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <style>
    </style>
  </head>
  <body>
    
   
    <div class="navbar navbar-inverse navbar-fixed-top">  
      <div class="navbar-inner">    
        <div class="container">      
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <i class="icon-cog"></i>
          </a>      
          <a class="brand" href="/manager">
            Swarm Model
          </a>
        </div>    
      </div>  
    </div>

    <div ng-controller='swarm_controller'>
      <div class='step_1'>
        <form class="form-vertical" id='parameters'>
          <div class="control-group">
            <label class="control-label" for="oil_radius">Площадь разлива</label>
            <div class="controls">
              <input type="text" id="oil_radius" ng-model='oil_radius' ng-change='count_agents()'>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="oil_volume">Объём разлитой нефти</label>
            <div class="controls">
              <input type="text" id="oil_volume" ng-model='oil_volume' ng-change='count_agents()'>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="remove_time">Заданный срок устранения</label>
            <div class="controls">
              <input type="text" id="remove_time" ng-model='remove_time' ng-change='count_agents()'>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="count">Требуемое количество агентов</label>
            <div class="controls">
              <input type="text" id="count" ng-model='skimmers_count' disabled>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <a href='#' class="btn" ng-click='start_animation($event)'>Запустить</a>
            </div>
          </div>
        </form>
      </div>
      <div class='step_2 container'>
        <div class="row">
          <a href='#' class="btn" ng-click='show_parameters($event)'>Настройки</a>
          <canvas id="paperCanvas" resize='true'></canvas>
        </div>
      </div>
    </div>   

    <script src="/javascripts/jquery-1.9.1.min.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <!-- <script src="/javascripts/kinetic.min.js"></script> -->
    <script src="/javascripts/paper.js"></script>
    <script src="/components/AngularJS/angular.js"></script>
    <script src="/swarm.js"></script>
    <script>

    </script>
  </body>
</html>
